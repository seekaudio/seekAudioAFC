<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- 按压状态 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#FF4A4A4A"
                android:endColor="#FF2D2D2D" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="#FF333333" />
        </shape>
    </item>
    
    <!-- 默认状态 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#FF6D6D6D"
                android:centerColor="#FF4A4A4A"
                android:endColor="#FF2D2D2D" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="#FF333333" />
        </shape>
    </item>
</selector>